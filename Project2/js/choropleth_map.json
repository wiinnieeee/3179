{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Risk Index (WRI) of Countries in the World in 2021",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "layer":[
        {
    "data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
    },
    "mark": {"type": "geoshape", "fill": "skyblue"}
     },    
    {
      "data": {
      "url": "https://raw.githubusercontent.com/wiinnieeee/3179/main/Project2/js/ne_50m_graticules_30.json",
      "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
        {
    "data": {
    "url": "https://raw.githubusercontent.com/wiinnieeee/3179/main/Project2/js/ne_50m_admin_0_sovereignty.json",
    "format": {"type": "topojson", "feature": "ne_50m_admin_0_sovereignty"}
    },
    "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
    "data": {
        "url": "https://raw.githubusercontent.com/wiinnieeee/3179/main/Project2/js/ne_50m_admin_0_sovereignty.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_sovereignty"}
        },
        "transform": [
            {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/wiinnieeee/3179/main/Project2/data/world_risk_index_2021.csv"
                },
            "key": "Region",
            "fields": ["WRI"]
                }
            }
        ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "WRI",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [5, 10, 30],
                "range": ["#fbb4b9", "#f768a1", "#c51b8a", "#7a0177"]
                }
            },
        "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title":"Region"},
            {"field": "WRI", "type": "quantitative"}
        ]
        
        }
    }
        ]
}
    
