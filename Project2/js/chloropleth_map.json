{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Disaster Risks Dataset",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
    "url": "https://github.com/wiinnieeee/3179/blob/50938a13ee8cf09408ee0d1b8375548f649cc9b9/Project2/js/ne_110.topojson",
    "format": {"type": "topojson", "feature": "ne_110"}
    },
    "transform": [
    {
    "lookup": "properties.NAME",
    "from": {
    "data": {
    "url": "https://github.com/wiinnieeee/3179/blob/50938a13ee8cf09408ee0d1b8375548f649cc9b9/Project2/data/world_risk_index_2021.xlsx"
    },
    "key": "Region",
    "fields": ["WRI"]
    }
    },
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
    "color": {
    "field": "WRI",
    "type": "quantitative",
   "scale": {
    "type": "threshold",
    "domain": [10, 20, 30],
    "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
    }
    },
    "tooltip": [
    {"field": "properties.NAME", "type": "nominal", "title":
    "Country"},
    {"field": "WRI", "type": "quantitative"}
    ]
    }
    }
