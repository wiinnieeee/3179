{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Disaster Risks Dataset",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
    "url": "https://github.com/wiinnieeee/3179/blob/50938a13ee8cf09408ee0d1b8375548f649cc9b9/Project2/js/ne_110.json",
    "format": {"type": "topojson", "feature": "ne_110"}
    },
    "transform": [
    {
    "lookup": "properties.NAME",
    "from": {
    "data": {
    "url": "https://github.com/wiinnieeee/3179/blob/50938a13ee8cf09408ee0d1b8375548f649cc9b9/Project2/data/world_risk_index_2021.xlsx"
    },
    "key": "Region",
    "fields": ["WRI"]
    }
    },
    {"calculate": "datum.Active + 0.1", "as": "Active Cases"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
    "color": {
    "field": "Active Cases",
    "type": "quantitative",
    "scale": {"type": "log"}
    },
    "tooltip": [
    {"field": "properties.NAME", "type": "nominal", "title":
    "Country"},
    {"field": "Active", "type": "quantitative"}
    ]
    }
    }
